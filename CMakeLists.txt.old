cmake_minimum_required(VERSION 3.16)
project(unimalen)

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

find_package(Qt6 REQUIRED COMPONENTS Core Widgets Gui LinguistTools)

qt6_standard_project_setup()

set(SOURCES
    src/main.cpp
    src/mainwindow.cpp
    src/canvas.cpp
    src/tabwidget.cpp
    src/toolbar.cpp
    src/patternbar.cpp
    src/thicknessbar.cpp
    src/layer.cpp
    src/layerpanel.cpp
)

set(HEADERS
    src/mainwindow.h
    src/canvas.h
    src/tabwidget.h
    src/toolbar.h
    src/patternbar.h
    src/thicknessbar.h
    src/layer.h
    src/layerpanel.h
)

qt6_add_executable(unimalen ${SOURCES} ${HEADERS})

# Add translation files
set(TRANSLATION_FILES
    translations/unimalen_en.ts
    translations/unimalen_es.ts
    translations/unimalen_fr.ts
    translations/unimalen_de.ts
)

qt6_add_translations(unimalen TS_FILES ${TRANSLATION_FILES})

target_link_libraries(unimalen PRIVATE Qt6::Core Qt6::Widgets Qt6::Gui)

# Set application properties
set_target_properties(unimalen PROPERTIES
    WIN32_EXECUTABLE TRUE
    MACOSX_BUNDLE TRUE
)